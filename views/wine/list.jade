extends ../base.jade

block content
  h3 Wine List

  a(href="/wine/add", class='btn btn-success btn-sm')
    i.glyphicon.glyphicon-plus
    span  Add wine

  br
  br
  table.table
    thead
      tr
        th Winery
        th Vintage
        th Wine
        th Bottles
    tbody
      each w in wine
        tr
          td
            a(href="/wine/#{w.id}") #{w.winery}
          td
            a(href="/wine/#{w.id}") #{w.vintage}
          td
            a(href="/wine/#{w.id}") #{w.wine}
          td= w.bottles
  if !wine.length
    p No wine found.

  if nextPageToken
    nav
      ul.pager
        li
          a(href="?pageToken=#{encodeURIComponent(nextPageToken)}") More
